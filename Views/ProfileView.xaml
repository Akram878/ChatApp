<UserControl x:Class="ChatApp.Views.ProfileView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="20">
        <Button Command="{Binding BackCommand}" Content="&lt; Back" HorizontalAlignment="Left" Margin="0,0,0,20"/>
        <TextBlock Text="Edit Profile" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <Grid Margin="0,0,0,20">
            <Ellipse Width="100" Height="100" Fill="LightGray"/>
            <TextBlock Text="Change Avatar" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        </Grid>
        
        <TextBlock Text="Username" FontWeight="Bold"/>
        <TextBox Text="{Binding User.Username}" Margin="0,5,0,15" Padding="5"/>
        
        <TextBlock Text="Bio" FontWeight="Bold"/>
        <TextBox Text="{Binding User.Profile.Bio}" Height="60" TextWrapping="Wrap" Margin="0,5,0,15" Padding="5"/>
        
        <TextBlock Text="Status" FontWeight="Bold"/>
        <ComboBox ItemsSource="{Binding StatusOptions}" SelectedItem="{Binding User.Profile.Status}" Margin="0,5,0,15"/>

        <Button Command="{Binding SaveProfileCommand}" Content="Save" Width="100" HorizontalAlignment="Left" Margin="0,10,0,0"/>
        <TextBlock Text="{Binding StatusMessage}" Foreground="Green" Margin="0,5,0,0"/>
    </StackPanel>
</UserControl>

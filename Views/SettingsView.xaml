<UserControl x:Class="ChatApp.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             mc:Ignorable="d" xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="20">
        <Button Command="{Binding BackCommand}" Content="&lt; Back" HorizontalAlignment="Left" Margin="0,0,0,20"/>
        <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>
        
        <CheckBox IsChecked="{Binding IsDarkTheme}" Content="Dark Mode (Simulation)" Margin="0,0,0,15"/>
        <TextBlock Text="Notifications" FontWeight="Bold" Margin="0,10,0,5"/>
        <CheckBox IsChecked="True" Content="Sound" Margin="0,0,0,5"/>
        <CheckBox IsChecked="True" Content="Banner" Margin="0,0,0,5"/>
    </StackPanel>
</UserControl>
